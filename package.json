{
  "name": "validated-extendable",
  "version": "7.1.3",
  "description": "Library that allows you to define classes extending zod schemas to avoid boilerplate code.",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      },
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "default": "./dist/cjs/index.js"
    }
  },
  "main": "dist/cjs/index.js",
  "types": "dist/cjs/index.d.ts",
  "module": "dist/esm/index.js",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "pnpm run build:types && pnpm run build:js && pnpm run build:package.json",
    "build:types": "pnpm run build:types:cjs && pnpm run build:types:esm",
    "build:types:cjs": "tsc --project tsconfig.cjs.json --declaration --emitDeclarationOnly --outDir dist/cjs",
    "build:types:esm": "tsc --project tsconfig.esm.json --declaration --emitDeclarationOnly --outDir dist/esm",
    "build:js": "rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "build:package.json": "pnpm run build:package.json:cjs && pnpm run build:package.json:esm",
    "build:package.json:cjs": "echo '{ \"type\": \"commonjs\" }' > dist/cjs/package.json",
    "build:package.json:esm": "echo '{ \"type\": \"module\" }' > dist/esm/package.json",
    "lint": "biome check; status=$?; echo 'Use `pnpm run lint!` to apply the fixes.'; exit $status",
    "lint!": "biome check --write",
    "test": "pnpm run test:types && ava",
    "test:types": "tsc --noEmit",
    "version": "pnpm run lint!",
    "prepublishOnly": "pnpm run lint",
    "prepare": "pnpm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/takagiy/validated-extendable.js.git"
  },
  "keywords": [
    "zod",
    "validation",
    "validate",
    "schema",
    "class",
    "extends",
    "typescript",
    "value object",
    "DDD",
    "clean architecture"
  ],
  "author": "Yuki Takagi <takagiy.4dev@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/takagiy/validated-extendable.js/issues"
  },
  "homepage": "https://github.com/takagiy/validated-extendable.js/#readme",
  "packageManager": "pnpm@9.4.0+sha256.b6fd0bfda555e7e584ad7e56b30c68b01d5a04f9ee93989f4b93ca8473c49c74",
  "ava": {
    "files": [
      "test/**/*.ts"
    ],
    "extensions": [
      "ts"
    ],
    "nodeArguments": [
      "-r",
      "@swc-node/register"
    ],
    "environmentVariables": {
      "SWCRC": "true"
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-swc": "^0.3.1",
    "@rollup/plugin-typescript": "^11.1.6",
    "@swc-node/register": "^1.10.0",
    "@swc/cli": "^0.4.0",
    "@swc/core": "^1.6.6",
    "@tsconfig/recommended": "^1.0.7",
    "@tsconfig/strictest": "^2.0.5",
    "@types/node": "^20.14.9",
    "@types/ramda": "^0.30.1",
    "ava": "^6.1.3",
    "ramda": "^0.30.1",
    "rollup": "^4.18.1",
    "typescript": "^5.5.2"
  },
  "peerDependencies": {
    "zod": "^3.0.0"
  }
}
